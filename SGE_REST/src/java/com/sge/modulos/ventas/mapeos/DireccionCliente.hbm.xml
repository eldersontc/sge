<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sge.modulos.ventas.entidades.DireccionCliente" table="DireccionCliente" schema="Ventas">
        <id name="idDireccionCliente" column="idDireccionCliente">
            <generator class="sequence">
                <param name="sequence">Ventas.direccioncliente_iddireccioncliente_seq</param>
            </generator>
        </id>
        <property name="idCliente" column="idCliente"/>
        <property name="idDepartamento" column="idDepartamento"/>
        <property name="idProvincia" column="idProvincia"/>
        <property name="idDistrito" column="idDistrito"/>
        <property name="direccion" column="direccion"/>
    </class>
</hibernate-mapping>