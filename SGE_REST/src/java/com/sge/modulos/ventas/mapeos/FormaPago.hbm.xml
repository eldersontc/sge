<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sge.modulos.ventas.entidades.FormaPago" table="FormaPago" schema="Ventas">
        <id name="idFormaPago" column="idFormaPago">
            <generator class="sequence">
                <param name="sequence">Ventas.formapago_idformapago_seq</param>
            </generator>
        </id>
        <property name="descripcion" column="descripcion"/>
        <property name="credito" column="credito"/>
        <property name="dias" column="dias"/>
        <property name="activo" column="activo"/>
    </class>
</hibernate-mapping>