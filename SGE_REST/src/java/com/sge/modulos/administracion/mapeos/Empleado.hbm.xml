<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.sge.modulos.administracion.entidades.Empleado" table="Empleado" schema="Administracion">
        <id name="idEmpleado" column="idEmpleado">
            <generator class="sequence">
                <param name="sequence">Administracion.empleado_idempleado_seq</param>
            </generator>
        </id>
        <property name="codigo" column="codigo"/>
        <property name="nombre" column="nombre"/>
        <property name="apellidoPaterno" column="apellidoPaterno"/>
        <property name="apellidoMaterno" column="apellidoMaterno"/>
        <property name="tipoDocumentoIdentidad" column="tipoDocumentoIdentidad"/>
        <property name="documentoIdentidad" column="documentoIdentidad"/>
        <property name="activo" column="activo"/>
    </class>
</hibernate-mapping>